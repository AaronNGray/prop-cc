#include <iostream>


datatype Exp :: rewrite =
   NUM   of int        => _  
|  ADD   of Exp, Exp   => "(" _ "+" _ ")"
;

instantiate datatype Exp;

rewrite class Silly (Exp) {
public:
   Silly() {}
};

rewrite Silly {
   NUM x: { x = x == 0 ? 1 : 2; }
};

int main() 
{
   Exp e = ADD(NUM(0),NUM(3));
   Silly S;
   std::cout << "Before = " << e << '\n';
   S(e);
   std::cout << "After = " << e << '\n';
   return 0;
}
